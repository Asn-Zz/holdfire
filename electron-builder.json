{
  "appId": "com.proofreading.assistant",
  "productName": "文章校对助手",
  "directories": {
    "output": "dist"
  },
  "files": ["out/**/*", "electron/**/*", "package.json"],
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"],
    "icon": "public/icon.icns"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "public/icon.ico"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office",
    "icon": "public/icon.png"
  }
}
